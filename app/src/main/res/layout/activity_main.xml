<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/text_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LondonAPPl"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/LondonAPPl"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:text="@string/i_am"
        android:textColor="#d35400"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/text_i_am"
        android:layout_toRightOf="@+id/text_i_am"
        android:text="@string/poor"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView"
        android:contentDescription="@drawable/coal"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/LondonAPPl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="@string/www_londonappbrewery_com"
        android:textAlignment="center"
        android:textColor="#f39c12"
        android:textSize="23sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_coal"
        android:layout_centerHorizontal="true"
        android:text="@string/roll" />
</RelativeLayout>
